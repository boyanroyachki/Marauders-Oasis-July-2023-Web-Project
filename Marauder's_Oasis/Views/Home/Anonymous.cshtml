@{
    ViewBag.Data = DateTime.UtcNow;
}
<body id="AnonymousView">

    <div class="contact-container">
        <h1 class="contact-title">Get in Touch</h1>
        <p class="contact-description">We would love to hear from you. Please fill out the form below to contact us:</p>

        
        <form class="contact-form" method="post" action="/Home/Anonymous">
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" name="message" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</body>
